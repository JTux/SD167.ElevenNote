@model ElevenNote.Models.Note.NoteCreate
@{
    string[] placeholderTitles = {
        "The Art of Effective Note-Taking",
        "Mastering Productivity with Note-Taking",
        "Unlocking Creativity Through Note-Taking",
        "Collaboration Strategies for Note-Takers",
        "Note-Taking Techniques for Success"
    };

    string[] placeholderContent = {
        "Take notes and unleash...",
        "Capture your brilliant ideas...",
        "Jot down important thoughts...",
        "Express yourself...",
        "Write down your dreams..."
    };

    Random rng = new();

    string titlePlaceholder = placeholderTitles[rng.Next(placeholderTitles.Length)];
    string contentPlaceholder = placeholderContent[rng.Next(placeholderContent.Length)];

    ViewBag.Title = "Create";
}

<h1 class="display-4">Create Note</h1>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="@titlePlaceholder">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Content">Content</label>
        <textarea class="form-control" asp-for="Content" placeholder="@contentPlaceholder" style="min-height: 100px;"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="d-flex flex-column gap-2">
        <button type="submit" class="btn btn-primary">Save Note</button>
        <a asp-action="Index" asp-controller="Note" class="text-center p-2">Cancel</a>
    </div>
</form>